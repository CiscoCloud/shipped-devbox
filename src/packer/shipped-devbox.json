{
    "builders": [{
        "name":                    "shipped-devbox",
        "type":                    "virtualbox-iso",
        "guest_additions_path":    "VBoxGuestAdditions_{{.Version}}.iso",
        "virtualbox_version_file": "vbox_version",
        "guest_os_type":           "RedHat_64",
        "iso_url":                 "https://mirrors.kernel.org/centos/7/isos/x86_64/CentOS-7.0-1406-x86_64-NetInstall.iso",
        "iso_checksum":            "df6dfdd25ebf443ca3375188d0b4b7f92f4153dc910b17bccc886bd54a7b7c86",
        "iso_checksum_type":       "sha256",
        "ssh_username":            "root",
        "ssh_password":            "root",
        "ssh_wait_timeout":        "10000s",
        "http_directory":          "src/kickstarts",
        "boot_wait":               "10s",
        "boot_command": [          "<up><tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter>"],
        "shutdown_command":        "/sbin/halt -h -p",
        "disk_size":               20480,
        "vboxmanage":              [["modifyvm", "{{.Name}}", "--memory", "1024"]]
    }],
    "provisioners": [{
        "type":                    "shell",
        "execute_command":         "bash '{{.Path}}'",
        "scripts": [               "src/scripts/disable-root.sh",
                                   "src/scripts/vagrant.sh",
                                   "src/scripts/virtualbox-guest-additions.sh",
                                   "src/scripts/dev-tools.sh",
                                   "src/scripts/minimize.sh",
                                   "src/scripts/clean.sh"]
    }],
    "post-processors": [{
        "type":                    "vagrant",
        "output":                  "shipped-devbox.box",
        "compression_level":       9,
        "keep_input_artifact":     false
    }]
}
